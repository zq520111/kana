    <div class="stream-item">
    <img src="<%= config.root %>img/avatar.png" class="stream-item-avatar">
    <h2 class="stream-item-title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></h2>
    <div class="stream-item-snipper"><%- post.excerpt %></div>
    <div class="stream-item-meta"><% post.categories.each(function(category){ %>
    In <a href="<%= url_for(category.path) %>"><%= category.name %></a>
  <% }) %>, <time><%= date(post.date, null) %></time></div>
    </div>